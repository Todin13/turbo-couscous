<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatbot.ChatController">
    <AnchorPane fx:id="anchorPane" prefHeight="800.0" prefWidth="600.0">
        <TextArea fx:id="chatArea" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    </AnchorPane>
    <TextField fx:id="inputField" onAction="#onSend" prefWidth="600.0"/>
    <Button text="Send" onAction="#onSend"/>
</VBox>